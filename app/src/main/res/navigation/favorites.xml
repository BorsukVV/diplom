<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorites"
    app:startDestination="@id/favoritesFragment">

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="ru.netology.neRecipes.ui.FavoritesFragment"
        android:label="FavoritesFragment"
        tools:layout="@layout/favorites_fragment">
        <argument
            android:name="isFavorite"
            app:argType="boolean"
            android:defaultValue="true" />
        <action
            android:id="@+id/from_favoritesFragment_to_recipeTabFragment"
            app:destination="@id/recipeTabFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipeTabFragment"
        android:name="ru.netology.neRecipes.ui.RecipeTabFragment"
        android:label="RecipeTabFragment"
        tools:layout="@layout/recipe_tab_fragment">
        <argument
            android:name="operationCode"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>
</navigation>